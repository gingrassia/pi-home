{
  "name": "pi-home-raspberry",
  "version": "0.0.0",
  "description": "GPIO interface for https://github.com/raspberry-pi-home/pi-home-raspberry",
  "author": {
    "name": "Gustavo Ingrassia",
    "email": "gustavo.ingrassia@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/raspberry-pi-home/pi-home-raspberry",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raspberry-pi-home/pi-home-raspberry.git"
  },
  "main": "lib/pi-home-raspberry.min.js",
  "types": "lib/pi-home-raspberry.d.ts",
  "bin": "./bin/pi-home-raspberry.js",
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.1",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "babel-loader": "^8.1.0",
    "eslint": "^7.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "release-it": "^13.6.1",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-shell-plugin": "^0.5.0"
  },
  "dependencies": {
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.47",
    "@types/lodash": "^4.14.158",
    "@types/morgan": "^1.9.1",
    "express": "^4.17.1",
    "helmet": "^3.23.0",
    "lodash": "^4.17.19",
    "lowdb": "^1.0.0",
    "morgan": "^1.10.0",
    "pi-home-core": "git+https://github.com/raspberry-pi-home/pi-home-core.git"
  },
  "scripts": {
    "start": "NODE_ENV=development webpack --mode=development --watch",
    "start:dev": "nodemon lib/pi-home-raspberry.js --ignore db.json",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "type-check": "tsc --noEmit",
    "build": "npm run build:types && npm run build:js:development && npm run build:js:production",
    "build:types": "tsc -d src/pi-home-raspberry.ts --emitDeclarationOnly --outFile lib/pi-home-raspberry.d.ts",
    "build:js:development": "webpack --mode=development",
    "build:js:production": "webpack --mode=production",
    "test": "jest --config=jest.config.json",
    "release": "release-it",
    "release:minor": "release-it minor",
    "release:major": "release-it major"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git rm lib/*.js && npm run lint && npm run type-check"
    }
  }
}
